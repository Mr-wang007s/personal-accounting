{
  "compilerOptions": {
    "strict": true,
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "lib": ["ES2017"],
    "typeRoots": ["./miniprogram/typings"],
    "types": [],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["miniprogram/*"]
    }
  },
  "include": ["miniprogram/**/*.ts"],
  "exclude": ["node_modules"]
}
