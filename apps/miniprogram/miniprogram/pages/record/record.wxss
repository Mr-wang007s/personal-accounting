/* 记账表单页样式 */
.page-container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
  padding-bottom: 200rpx;
}

/* 类型切换 - 优化样式 */
.type-tabs {
  display: flex;
  background-color: var(--bg-primary);
  padding: 16rpx;
  margin: 24rpx 32rpx;
  border-radius: var(--radius-lg);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx;
  border-radius: var(--radius-md);
  font-size: 30rpx;
  font-weight: 600;
  color: var(--text-secondary);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab.active {
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.tab.active.expense {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
}

.tab.active.income {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
}

/* 金额输入 - 更突出 */
.amount-section {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 56rpx 32rpx;
  background-color: var(--bg-primary);
  margin: 0 32rpx 24rpx;
  border-radius: var(--radius-lg);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
}

/* 支出时的金额区域 */
.amount-section.expense {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.03) 0%, rgba(220, 38, 38, 0.06) 100%);
}

/* 收入时的金额区域 */
.amount-section.income {
  background: linear-gradient(135deg, rgba(16, 185, 129, 0.03) 0%, rgba(5, 150, 105, 0.06) 100%);
}

.currency-symbol {
  font-size: 64rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-right: 16rpx;
}

.amount-section.expense .currency-symbol {
  color: #EF4444;
}

.amount-section.income .currency-symbol {
  color: #10B981;
}

.amount-input {
  height: 160rpx;
  line-height: 160rpx;
  font-size: 80rpx;
  font-weight: 800;
  color: var(--text-primary);
  text-align: center;
  min-width: 200rpx;
  max-width: 400rpx;
  letter-spacing: -2rpx;
}

.amount-input::placeholder {
  color: var(--text-muted);
  font-weight: 400;
}

/* 分类选择 */
.section {
  background-color: var(--bg-primary);
  margin: 0 32rpx 24rpx;
  padding: 24rpx;
  border-radius: var(--radius-lg);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
  display: block;
  font-weight: 500;
}

.category-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 16rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 8rpx;
  border-radius: var(--radius-md);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item:active {
  transform: scale(0.95);
}

.category-item.selected {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.4);
  transform: scale(1.02);
}

.category-item.selected.expense-selected {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.4);
}

.category-item.selected.income-selected {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.4);
}

.category-item.selected .category-name {
  color: #FFFFFF;
}

.category-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 8rpx;
  transition: all 0.2s;
  background-color: var(--bg-tertiary);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.category-item.selected .category-icon {
  background-color: rgba(255, 255, 255, 0.25) !important;
  box-shadow: none;
}

.category-icon image {
  width: 36rpx;
  height: 36rpx;
}

.category-name {
  font-size: 22rpx;
  color: var(--text-secondary);
  text-align: center;
  font-weight: 500;
}

/* 日期选择 */
.date-picker {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: var(--bg-tertiary);
  border-radius: var(--radius-md);
}

.date-picker image:first-child {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
  opacity: 0.6;
}

.date-picker text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
}

.date-picker .arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
}

/* 备注输入 */
.note-input {
  width: 100%;
  height: 160rpx;
  padding: 20rpx 24rpx;
  background-color: var(--bg-tertiary);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  box-sizing: border-box;
}

.note-input::placeholder {
  color: var(--text-muted);
}

/* 底部按钮 - 优化样式 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 32rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background-color: var(--bg-primary);
  box-shadow: 0 -8rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  flex-direction: row;
  gap: 16rpx;
  z-index: 2;
}

.btn-save {
  flex: 3;
  padding: 32rpx;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 700;
  color: #FFFFFF;
  border: none;
  transition: all 0.2s;
}

.btn-save:active {
  transform: scale(0.98);
}

.btn-save.expense {
  background: linear-gradient(135deg, #EF4444 0%, #DC2626 100%);
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.35);
}

.btn-save.income {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  box-shadow: 0 8rpx 24rpx rgba(16, 185, 129, 0.35);
}

.btn-save[disabled] {
  background: var(--text-muted);
  opacity: 0.6;
  box-shadow: none;
}

.btn-delete {
  flex: 1;
  padding: 32rpx;
  border-radius: var(--radius-lg);
  font-size: 30rpx;
  font-weight: 600;
  color: var(--danger-color);
  background-color: rgba(239, 68, 68, 0.1);
  border: none;
  transition: all 0.2s;
}

.btn-delete:active {
  background-color: rgba(239, 68, 68, 0.2);
  transform: scale(0.98);
}
