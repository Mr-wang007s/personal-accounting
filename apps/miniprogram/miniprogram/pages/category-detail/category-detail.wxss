/* 分类明细页样式 */
.page-container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
}

/* 头部 */
.header {
  padding: 48rpx 32rpx;
  color: #FFFFFF;
  position: relative;
  overflow: hidden;
}

.header::before {
  content: '';
  position: absolute;
  top: -60rpx;
  right: -60rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header::after {
  content: '';
  position: absolute;
  bottom: -40rpx;
  left: -40rpx;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.header-icon {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.header-icon image {
  width: 48rpx;
  height: 48rpx;
  filter: brightness(0) invert(1);
}

.header-info {
  margin-bottom: 32rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 26rpx;
  opacity: 0.8;
}

.header-amount {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.amount-label {
  font-size: 24rpx;
  opacity: 0.8;
}

.amount-value {
  font-size: 56rpx;
  font-weight: 800;
  letter-spacing: -2rpx;
}

/* 记录列表 */
.records-container {
  padding: 24rpx 32rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

.record-list {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.2s ease;
}

.record-item:active {
  background-color: var(--bg-tertiary);
}

.record-item:last-child {
  border-bottom: none;
}

.record-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.record-date {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.record-note {
  font-size: 24rpx;
  color: var(--text-muted);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-right {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 700;
}

.record-amount.income {
  color: #10B981;
}

.record-amount.expense {
  color: #EF4444;
}

.record-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 32rpx;
}

.empty-state image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  opacity: 0.4;
}

.empty-state text {
  color: var(--text-muted);
  font-size: 28rpx;
}
