/* 个人中心页样式 */
.page-container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
  padding-bottom: 180rpx;
}

/* 用户信息卡片 - 与 web 端保持一致 */
.user-card {
  display: flex;
  align-items: center;
  padding: 56rpx 32rpx;
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 50%, #A78BFA 100%);
  color: #FFFFFF;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(99, 102, 241, 0.25);
}

.user-card::before {
  content: '';
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 240rpx;
  height: 240rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.user-card::after {
  content: '';
  position: absolute;
  bottom: -60rpx;
  left: -60rpx;
  width: 180rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  position: relative;
  z-index: 1;
  border: 4rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar text {
  font-size: 52rpx;
  font-weight: 800;
}

.user-info {
  flex: 1;
  position: relative;
  z-index: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: 700;
  display: block;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.user-id {
  font-size: 24rpx;
  opacity: 0.85;
}

/* 区块 - 优化卡片样式 */
.section {
  background-color: var(--bg-primary);
  margin: 24rpx 32rpx;
  padding: 28rpx;
  border-radius: var(--radius-lg);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: all 0.2s ease;
}

.section:active {
  transform: scale(0.995);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
  margin-bottom: 16rpx;
}

.section-header .section-title {
  margin-bottom: 0;
}

.add-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--primary-color);
  font-size: 26rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  background-color: rgba(99, 102, 241, 0.08);
  border-radius: var(--radius-md);
  transition: all 0.2s;
}

.add-btn:active {
  background-color: rgba(99, 102, 241, 0.15);
}

.add-btn image {
  width: 28rpx;
  height: 28rpx;
  filter: brightness(0) saturate(100%) invert(42%) sepia(93%) saturate(1352%) hue-rotate(213deg) brightness(89%) contrast(119%);
}

/* 账本列表 - 优化样式 */
.ledger-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.ledger-item {
  display: flex;
  align-items: center;
  padding: 24rpx;
  background-color: var(--bg-tertiary);
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.ledger-item:active {
  background-color: var(--border-color);
  transform: scale(0.99);
}

.ledger-item.active {
  border-color: var(--primary-color);
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.06) 0%, rgba(139, 92, 246, 0.1) 100%);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.2);
}

.ledger-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 18rpx;
  background-color: var(--bg-primary);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.ledger-icon text {
  font-size: 32rpx;
}

.ledger-info {
  flex: 1;
}

.ledger-name {
  font-size: 28rpx;
  font-weight: 600;
  color: var(--text-primary);
  display: block;
}

.ledger-count {
  font-size: 24rpx;
  color: var(--text-muted);
  display: block;
  margin-top: 4rpx;
}

.ledger-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.check-icon {
  width: 36rpx;
  height: 36rpx;
}

.delete-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.5;
}

/* 菜单列表 - 优化样式 */
.menu-list {
  display: flex;
  flex-direction: column;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 28rpx 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: background-color 0.2s;
}

.menu-item:active {
  background-color: var(--bg-tertiary);
  margin: 0 -28rpx;
  padding-left: 28rpx;
  padding-right: 28rpx;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

/* 同步图标 - 蓝色 */
.menu-icon.sync {
  background-color: rgba(59, 130, 246, 0.1);
}

.menu-icon.sync image {
  filter: brightness(0) saturate(100%) invert(42%) sepia(98%) saturate(1234%) hue-rotate(196deg) brightness(96%) contrast(96%);
}

/* 清除数据图标 - 红色 */
.menu-icon.danger {
  background-color: rgba(239, 68, 68, 0.1);
}

.menu-icon.danger image {
  filter: brightness(0) saturate(100%) invert(41%) sepia(78%) saturate(1831%) hue-rotate(335deg) brightness(94%) contrast(93%);
}

/* 默认图标 */
.menu-icon.default {
  background-color: var(--bg-tertiary);
}

.menu-icon image {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.85;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.menu-item.danger .menu-text {
  color: var(--danger-color);
}

.menu-value {
  font-size: 26rpx;
  color: var(--text-muted);
  margin-right: 8rpx;
}

.menu-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
}

/* 弹窗 - 优化样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 100;
  backdrop-filter: blur(4rpx);
}

.modal-content {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background-color: var(--bg-primary);
  border-radius: 32rpx;
  padding: 40rpx;
  z-index: 101;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.2);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-primary);
  text-align: center;
  display: block;
  margin-bottom: 32rpx;
}

.modal-body {
  margin-bottom: 32rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: block;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  background-color: var(--bg-tertiary);
  border-radius: var(--radius-md);
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: border-color 0.2s;
}

.form-input:focus {
  border-color: var(--primary-color);
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
}

.icon-item {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-tertiary);
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.icon-item.selected {
  border-color: var(--primary-color);
  background-color: rgba(99, 102, 241, 0.1);
}

.icon-item text {
  font-size: 36rpx;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  padding: 28rpx;
  border-radius: var(--radius-lg);
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  transition: all 0.2s;
}

.modal-btn:active {
  transform: scale(0.98);
}

.modal-btn.cancel {
  background-color: var(--bg-tertiary);
  color: var(--text-secondary);
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 20rpx rgba(99, 102, 241, 0.35);
}

.modal-btn.confirm[disabled] {
  background: var(--text-muted);
  opacity: 0.6;
  box-shadow: none;
}

