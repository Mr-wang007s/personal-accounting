/* 引导页样式 - 微信授权版 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #6366F1 0%, #8B5CF6 50%, #A78BFA 100%);
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 60rpx 48rpx 80rpx;
}

/* 欢迎区域 */
.welcome-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
}

.welcome-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.welcome-icon text {
  font-size: 60rpx;
}

.welcome-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 12rpx;
}

.welcome-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 48rpx;
  padding: 40rpx;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 24rpx;
}

/* 头像选择按钮 */
.avatar-btn {
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  margin: 0;
  background: transparent;
  border: none;
  position: relative;
}

.avatar-btn::after {
  display: none;
}

.avatar-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.5);
  background-color: rgba(255, 255, 255, 0.3);
}

.avatar-edit-icon {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.avatar-edit-icon text {
  font-size: 24rpx;
}

.avatar-hint {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 16rpx;
}

/* 昵称输入 */
.nickname-section {
  width: 100%;
  margin-top: 32rpx;
}

.nickname-input {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 32rpx;
  text-align: center;
  box-sizing: border-box;
}

.nickname-input::placeholder {
  color: #9CA3AF;
}

/* 账本设置区域 */
.ledger-section {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #FFFFFF;
  margin-bottom: 24rpx;
  text-align: center;
}

.ledger-input {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 32rpx;
  text-align: center;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}

.ledger-input::placeholder {
  color: #9CA3AF;
}

/* 图标选择 */
.icon-section {
  margin-bottom: 24rpx;
}

.icon-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  text-align: center;
  margin-bottom: 20rpx;
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
}

.icon-item {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  border: 3rpx solid transparent;
  transition: all 0.2s;
}

.icon-item.selected {
  background-color: #FFFFFF;
  border-color: #FFFFFF;
}

.icon-item text {
  font-size: 40rpx;
}

/* 云同步提示 */
.sync-hint {
  text-align: center;
  padding: 20rpx 0;
}

.hint-text {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 开始按钮 */
.start-btn {
  width: 100%;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #6366F1;
  border: none;
  margin-top: auto;
}

.start-btn.disabled,
.start-btn[disabled] {
  background-color: rgba(255, 255, 255, 0.5);
  color: rgba(99, 102, 241, 0.5);
}
