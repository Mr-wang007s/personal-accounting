/* 引导页样式 */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #6366F1 0%, #8B5CF6 50%, #A78BFA 100%);
  display: flex;
  flex-direction: column;
}

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 80rpx 48rpx;
}

/* 步骤指示器 */
.steps-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 80rpx;
}

.step {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  color: rgba(255, 255, 255, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s;
}

.step.active {
  background-color: #FFFFFF;
  color: var(--primary-color);
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background-color: rgba(255, 255, 255, 0.3);
  margin: 0 16rpx;
  transition: all 0.3s;
}

.step-line.active {
  background-color: #FFFFFF;
}

/* 步骤内容 */
.step-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.step-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 48rpx;
}

.step-icon text {
  font-size: 80rpx;
}

.step-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #FFFFFF;
  margin-bottom: 16rpx;
}

.step-desc {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 64rpx;
}

/* 表单区域 */
.form-section {
  width: 100%;
  margin-bottom: 48rpx;
}

.nickname-input,
.ledger-input {
  width: 100%;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  text-align: center;
  box-sizing: border-box;
}

.nickname-input::placeholder,
.ledger-input::placeholder {
  color: var(--text-muted);
}

/* 图标选择 */
.icon-section {
  margin-top: 32rpx;
}

.icon-label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
  display: block;
  text-align: center;
  margin-bottom: 20rpx;
}

.icon-grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 16rpx;
}

.icon-item {
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-md);
  border: 3rpx solid transparent;
  transition: all 0.2s;
}

.icon-item.selected {
  background-color: #FFFFFF;
  border-color: #FFFFFF;
}

.icon-item text {
  font-size: 40rpx;
}

/* 按钮 */
.next-btn,
.start-btn {
  width: 100%;
  padding: 32rpx;
  background-color: #FFFFFF;
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 600;
  color: var(--primary-color);
  border: none;
}

.next-btn[disabled],
.start-btn[disabled] {
  background-color: rgba(255, 255, 255, 0.5);
  color: rgba(99, 102, 241, 0.5);
}

.btn-group {
  display: flex;
  gap: 24rpx;
  width: 100%;
}

.back-btn {
  flex: 1;
  padding: 32rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: var(--radius-lg);
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  border: none;
}

.start-btn {
  flex: 2;
}
