/* 首页样式 */
.page-container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
  padding-bottom: 180rpx;
}

/* 头部卡片 */
.header-card {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
  padding: 40rpx 32rpx 48rpx;
  color: #FFFFFF;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.ledger-info {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 32rpx;
}

.ledger-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.ledger-name {
  font-size: 26rpx;
  font-weight: 500;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  opacity: 0.8;
}

.month-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.balance-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.balance-label {
  font-size: 26rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 12rpx;
}

.balance-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.currency {
  font-size: 36rpx;
  font-weight: 500;
  margin-right: 8rpx;
}

.amount {
  font-size: 72rpx;
  font-weight: 700;
  letter-spacing: -2rpx;
}

.amount.negative {
  color: #FCA5A5;
}

.summary-row {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  padding: 24rpx 0;
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  opacity: 0.8;
  display: block;
  margin-bottom: 8rpx;
}

.summary-value {
  font-size: 32rpx;
  font-weight: 600;
}

.summary-value.income {
  color: #86EFAC;
}

.summary-value.expense {
  color: #FCA5A5;
}

.summary-divider {
  width: 1rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.3);
}

/* 快捷操作 */
.quick-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  margin-top: -24rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  background-color: var(--bg-primary);
  padding: 32rpx;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
}

.action-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon image {
  width: 32rpx;
  height: 32rpx;
}

.income-icon {
  background-color: rgba(16, 185, 129, 0.1);
}

.income-icon image {
  filter: brightness(0) saturate(100%) invert(58%) sepia(52%) saturate(553%) hue-rotate(113deg) brightness(93%) contrast(92%);
}

.expense-icon {
  background-color: rgba(239, 68, 68, 0.1);
}

.expense-icon image {
  filter: brightness(0) saturate(100%) invert(36%) sepia(93%) saturate(1352%) hue-rotate(337deg) brightness(91%) contrast(97%);
}

.action-text {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
}

/* 最近记录 */
.recent-section {
  padding: 0 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.view-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: var(--text-muted);
  font-size: 26rpx;
}

.view-all image {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

.records-list {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.record-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.record-icon image {
  width: 40rpx;
  height: 40rpx;
}

.record-info {
  flex: 1;
  min-width: 0;
}

.record-category {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  display: block;
}

.record-note {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-date {
  font-size: 22rpx;
  color: var(--text-muted);
  display: block;
  margin-top: 4rpx;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.record-amount.income {
  color: var(--success-color);
}

.record-amount.expense {
  color: var(--text-primary);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
}

.empty-state image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  opacity: 0.4;
}

.empty-state text {
  color: var(--text-muted);
  font-size: 28rpx;
}
