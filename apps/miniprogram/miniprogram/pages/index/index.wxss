/* 首页样式 */
.page-container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
  padding-bottom: 180rpx;
}

/* 头部卡片 - 与 web 端保持一致的渐变 */
.header-card {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 50%, #A78BFA 100%);
  padding: 40rpx 32rpx 56rpx;
  color: #FFFFFF;
  position: relative;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(99, 102, 241, 0.25);
}

.header-card::before {
  content: '';
  position: absolute;
  top: -100rpx;
  right: -100rpx;
  width: 300rpx;
  height: 300rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
}

.header-card::after {
  content: '';
  position: absolute;
  bottom: -60rpx;
  left: -60rpx;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
}

/* 斜线纹理背景 */
.header-card-pattern {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: repeating-linear-gradient(
    45deg,
    transparent,
    transparent 20rpx,
    rgba(255, 255, 255, 0.03) 20rpx,
    rgba(255, 255, 255, 0.03) 40rpx
  );
  pointer-events: none;
}

.header-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.ledger-info {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 12rpx 20rpx;
  border-radius: 32rpx;
}

.ledger-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.ledger-name {
  font-size: 26rpx;
  font-weight: 500;
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
  opacity: 0.8;
}

.month-label {
  font-size: 28rpx;
  opacity: 0.9;
}

.balance-section {
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
  z-index: 1;
}

.balance-label {
  font-size: 26rpx;
  opacity: 0.85;
  display: block;
  margin-bottom: 16rpx;
  letter-spacing: 2rpx;
}

.balance-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.currency {
  font-size: 40rpx;
  font-weight: 600;
  margin-right: 8rpx;
  opacity: 0.9;
}

.amount {
  font-size: 80rpx;
  font-weight: 800;
  letter-spacing: -2rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.amount.negative {
  color: #FCA5A5;
}

.summary-row {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.18);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 28rpx 0;
  position: relative;
  z-index: 1;
}

.summary-item {
  flex: 1;
  text-align: center;
}

.summary-label {
  font-size: 24rpx;
  opacity: 0.85;
  display: block;
  margin-bottom: 10rpx;
}

.summary-value {
  font-size: 34rpx;
  font-weight: 700;
}

.summary-value.income {
  color: #86EFAC;
}

.summary-value.expense {
  color: #FCA5A5;
}

.summary-divider {
  width: 1rpx;
  height: 64rpx;
  background-color: rgba(255, 255, 255, 0.35);
}

/* 快捷操作 - 与 web 端保持一致 */
.quick-actions {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  margin-top: -32rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  padding: 32rpx 24rpx;
  border-radius: var(--radius-lg);
  transition: all 0.2s ease;
}

.action-btn:active {
  transform: scale(0.98);
}

/* 收入按钮 - 绿色主题 */
.action-btn.income-btn {
  background-color: rgba(16, 185, 129, 0.08);
  box-shadow: 0 4rpx 16rpx rgba(16, 185, 129, 0.1);
}

.action-btn.income-btn:active {
  background-color: rgba(16, 185, 129, 0.15);
}

.action-btn.income-btn .action-text {
  color: #047857;
}

/* 支出按钮 - 红色主题 */
.action-btn.expense-btn {
  background-color: rgba(239, 68, 68, 0.08);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.1);
}

.action-btn.expense-btn:active {
  background-color: rgba(239, 68, 68, 0.15);
}

.action-btn.expense-btn .action-text {
  color: #B91C1C;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-icon image {
  width: 40rpx;
  height: 40rpx;
}

.income-icon {
  background-color: #10B981;
  box-shadow: 0 8rpx 20rpx rgba(16, 185, 129, 0.35);
}

.income-icon image {
  filter: brightness(0) invert(1);
}

.expense-icon {
  background-color: #EF4444;
  box-shadow: 0 8rpx 20rpx rgba(239, 68, 68, 0.35);
}

.expense-icon image {
  filter: brightness(0) invert(1);
}

.action-text {
  font-size: 30rpx;
  font-weight: 600;
}

/* 最近记录 */
.recent-section {
  padding: 0 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.view-all {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #6366F1;
  font-size: 26rpx;
  font-weight: 500;
  transition: opacity 0.2s;
}

.view-all:active {
  opacity: 0.7;
}

.view-all image {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.8;
  filter: brightness(0) saturate(100%) invert(42%) sepia(93%) saturate(1352%) hue-rotate(213deg) brightness(89%) contrast(119%);
}

.records-list {
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.record-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: all 0.2s ease;
}

.record-item:active {
  background-color: var(--bg-tertiary);
  transform: scale(0.99);
}

.record-item:last-child {
  border-bottom: none;
}

.record-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

/* 收入图标背景 */
.record-icon.income {
  background-color: rgba(16, 185, 129, 0.1);
}

/* 支出图标背景 */
.record-icon.expense {
  background-color: rgba(239, 68, 68, 0.1);
}

.record-icon image {
  width: 40rpx;
  height: 40rpx;
}

/* 收入图标颜色 */
.record-icon.income image {
  filter: brightness(0) saturate(100%) invert(58%) sepia(47%) saturate(5765%) hue-rotate(131deg) brightness(92%) contrast(87%);
}

/* 支出图标颜色 */
.record-icon.expense image {
  filter: brightness(0) saturate(100%) invert(41%) sepia(78%) saturate(1831%) hue-rotate(335deg) brightness(94%) contrast(93%);
}

.record-info {
  flex: 1;
  min-width: 0;
}

.record-category {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  display: block;
}

.record-note {
  font-size: 24rpx;
  color: var(--text-secondary);
  display: block;
  margin-top: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.record-date {
  font-size: 22rpx;
  color: var(--text-muted);
  display: block;
  margin-top: 4rpx;
}

.record-amount {
  font-size: 32rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.record-amount.income {
  color: #10B981;
}

.record-amount.expense {
  color: #EF4444;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 32rpx;
  background-color: var(--bg-primary);
  border-radius: var(--radius-lg);
}

.empty-state image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  opacity: 0.4;
}

.empty-state text {
  color: var(--text-muted);
  font-size: 28rpx;
}
